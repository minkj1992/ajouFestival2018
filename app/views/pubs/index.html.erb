<div class="filters">
  <div class="ui-group pub">
    <div id="mobileshow"><h3>DAY&NIGHT</h3></div>
    <div class="button-group js-radio-button-group" id="mobile" data-filter-group="PUB&BOOTH">
      <button type = "button" class="btn btn-outline-light button btn-sm" data-filter=".booth">DAY</button>
      <button type = "button" class="btn btn-outline-light button btn-sm" data-filter=".pub">NIGHT</button>
    </div>
  </div>

  <div class="ui-group date">
    <div id="mobileshow"><h3>DATE</h3></div>
    <div class="button-group js-radio-button-group" id="mobile" data-filter-group="date">
      <button type = "button" class="btn btn-outline-light button btn-sm is-checked" data-filter=".1">23DATE</button>
      <button type = "button" class="btn btn-outline-light button btn-sm" data-filter=".2">24DATE</button>
      <button type = "button" class="btn btn-outline-light button btn-sm" data-filter=".3">25DATE</button>
    </div>
  </div>


  <div class="ui-group area">
    <div id="mobileshow"><h3>AREA</h3></div>
    <div class="button-group js-radio-button-group" data-filter-group="area">
      <button type = "button" class="btn btn-outline-light button btn-sm  is-checked" data-filter="">Entire</button>
      <button type = "button" class="btn btn-outline-light button btn-sm" data-filter=".a">Aarea</button>
      <button type = "button" class="btn btn-outline-light button btn-sm" data-filter=".b">Barea</button>
      <button type = "button" class="btn btn-outline-light button btn-sm" data-filter=".c">Carea</button>
    </div>
  </div>


</div>

    
  <div class="all_card row" id="container">
    <% @pub.each do |x|%>
      <div class="card col-xl-4 col-lg-4 col-md-6 col-sm-12 col-xs-12 <%= x.pub_booth %> <%= x.date %> <%= x.map %>">
        <div class="card-content">
          <div class="card-thumbnail">
        <% if x.map == 'a' %>
          <div class="card-label a-sec">
            <div class="pub-sector"><%= x.map %></div>
            <div class="pub-day"><%= x.date+22 %>일</div>
          </div>
        <% elsif x.map == 'b' %>
          <div class="card-label b-sec">
            <div class="pub-sector"><%= x.map %></div>
            <div class="pub-day"><%= x.date+22 %>일</div>
          </div>
        <% elsif x.map == 'c' %>
          <div class="card-label c-sec">
            <div class="pub-sector"><%= x.map %></div>
            <div class="pub-day"><%= x.date+22 %>일</div>
          </div>
        <% end %>
          <% if x.image_url == nil %>
            <img src="/assets/basic_pub.png" alt="pubsimage">
          <% else %>
            <img src="<%= x.image_url %>" alt="pubsimage">
          <% end %>
          </div>
          <% if x.map == 'a' %>
          <div class="card-body">
            <div class="club-name a-sec"><%=x.major%></div>
            <span class="pub-name"><%=x.pubname%></span>
            <div class="pub-description"><%=x.pub_detail%></div>
            <div class ="bth_botton_t">
              <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-target="#modal-<%= x.id %>">
                상세내용
              </button>
            </div>
          </div>
          <% elsif x.map =='b' %>
          <div class="card-body">
            <div class="club-name b-sec"><%=x.major%></div>
            <span class="pub-name"><%=x.pubname%></span>
            <div class="pub-description"><%=x.pub_detail%></div>
            <div class ="bth_botton_t">
              <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-target="#modal-<%= x.id %>">
                상세내용
              </button>
            </div>
          </div>
          <% else %>
          <div class="card-body">
            <div class="club-name c-sec"><%=x.major%></div>
            <span class="pub-name"><%=x.pubname%></span>
            <div class="pub-description"><%=x.pub_detail%></div>
            <div class ="bth_botton_t">
              <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-target="#modal-<%= x.id %>">
                상세내용
              </button>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>




</div>
